<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="evento.com.evento">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activities.LoginActivity" />
        <activity android:name=".view.activities.SignupOneActivity" />
        <activity
            android:name=".view.activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.activities.SignupTwoActivity" />
        <activity android:name=".view.activities.SignupThreeActivity" />
        <activity android:name=".view.activities.CreateEventOneActivity" />
        <activity android:name=".view.activities.CreateEventTwoActivity" />
        <activity android:name=".view.activities.ShowProfileActivity" />
        <activity
            android:name=".view.activities.ShowEventActivity"
            android:label="@string/title_activity_show_event"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activities.ShowPostActivity"
            android:label="@string/title_activity_show_post"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activities.CreatePostActivity"
            android:label="@string/title_activity_create_post"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.activities.TimetableActivity" />
        <activity android:name=".view.activities.ShowNotificationActivity"></activity>
    </application>

</manifest>